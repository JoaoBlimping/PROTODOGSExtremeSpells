const speed = 150

onready var player = get_node(\"../player\")


func _ready():
	set_process(true)
	connect(\"body_enter\",self,\"hit\")


func _process(delta):
	var pos = get_pos()
	var angle = pos.angle_to_point(player.get_pos())
	var vel = Vector2(-sin(angle) * speed,-cos(angle) * speed)
	set_pos(pos + vel * delta)

func hit(body):
	if (body == player): get_parent().get_parent().finish(false)"

